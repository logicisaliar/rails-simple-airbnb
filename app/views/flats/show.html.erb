
<div class="wrapper">
  <img class="image-width" src="https://picsum.photos/1500/350" alt="">
  <div class="container margin-top-negative">
    <div class="row">
      <div class="col-md-8">
        <div class="card">
          <h1><%= @flat.name %></h1>
          <h3><%= @flat.address %></h3>
        </div>
        <div class="card">
          <h2>A little bit more about this flat..</h2>
          <p><%= @flat.description %></p>
          <img src="https://picsum.photos/300/150" alt="">
        </div>
      </div>
      <div class="col-md-4">
        <div class="card booking">
          <h3>Book this place!</h3>
          <div class="input-group mar-top">
            <span class="input-group-addon" id="basic-addon3">From:</span>
            <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3"  placeholder="12/10/2017">
          </div>
          <div class="input-group mar-top">
            <span class="input-group-addon" id="basic-addon3">To:</span>
            <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3"  placeholder="13/10/2017">
          </div>
          <button type="submit" class="mar-top btn btn-success btn-block">Book</button>
        </div>
        <div class="card">
          <h2>Details</h2>
          <i class="fas fa-adjust"><%= @flat.number_of_guests %></i>
          <i class="fas fa-adjust"><%= @flat.price_per_night %></i>

        </div>
        <div class="card">
          <div class="share">
            <p>Share</p>
            <div class="share-icons">
              <i class="fas fa-adjust"></i>
              <i class="fas fa-adjust"></i>
              <i class="fas fa-adjust"></i>
              <i class="fas fa-adjust"></i>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
